package DB;
import java.sql.*;
import javax.sql.DataSource;
import java.lang.annotation.Retention;
import java.lang.annotation.Target;
import static java.lang.annotation.ElementType.*;
import static java.lang.annotation.RetentionPolicy.*;



public class Driver {
	 
	public static void main(String[] args) {
				System.out.println("heloooooo");
		try{
			Connection myConn = DriverManager.getConnection("jdbc:mysql://localhost:3306/myfirstdb","root","");
						
			Statement myStmt = myConn.createStatement();
			String sql="insert into name (firstname, lastname) values ('elham', 'jafari')";
			myStmt.executeUpdate(sql);
			System.out.println(":((((");
			
			ResultSet myRs = myStmt.executeQuery("select * from name");
			System.out.println(":)))))");
			System.out.println(myRs);
			if(!myRs.next()){
				System.out.println("rs empry");
			}
			while (myRs.next()){
				System.out.println(":(((");
				System.out.println(myRs.getString("lastname")+","+myRs.getString("name"));
			
			
		    }
		}
		catch(Exception exp){
			
		}
		
	}
}


