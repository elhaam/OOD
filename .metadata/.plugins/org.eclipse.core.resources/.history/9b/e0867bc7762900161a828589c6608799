package UI;

import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JLabel;
import javax.swing.JRadioButton;
import javax.swing.JButton;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;
import org.eclipse.wb.swing.FocusTraversalOnArray;
import java.awt.Component;
import java.awt.CardLayout;

public class InformationalUI {

	private JFrame frame;
	private JLabel lblNewLabel;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					InformationalUI window = new InformationalUI();
					window.frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the application.
	 */
	public InformationalUI() {
		initialize();
	}

	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize() {
		frame = new JFrame();
		frame.setBounds(100, 100, 450, 226);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.getContentPane().setLayout(new CardLayout(0, 0));
		
		JPanel panel = new JPanel();
		frame.getContentPane().add(panel, "name_96051781831796");
		panel.setLayout(null);
		
		JLabel label = new JLabel("\u0646\u0648\u0639 \u0645\u0646\u0628\u0639 \u0627\u0637\u0644\u0627\u0639\u0627\u062A\u06CC  \u062E\u0648\u062F \u0631\u0627 \u0628\u0631\u0627\u06CC \u062B\u0628\u062A \u0627\u0646\u062A\u062E\u0627\u0628 \u06A9\u0646\u06CC\u062F:");
		label.setBounds(158, 49, 238, 14);
		panel.add(label);
		
		JRadioButton rdbtnNewRadioButton = new JRadioButton("\u0645\u0633\u062A\u0642\u06CC\u0645");
		rdbtnNewRadioButton.setBounds(246, 86, 109, 23);
		panel.add(rdbtnNewRadioButton);
		
		JRadioButton rdbtnNewRadioButton_1 = new JRadioButton("\u063A\u06CC\u0631 \u0645\u0633\u062A\u0642\u06CC\u0645");
		rdbtnNewRadioButton_1.setBounds(118, 86, 109, 23);
		panel.add(rdbtnNewRadioButton_1);
		
		
		JPanel panel_1 = new JPanel();
		frame.getContentPane().add(panel_1, "name_96051817129096");
		panel_1.setLayout(null);
		
		lblNewLabel = new JLabel("\u0627\u0637\u0644\u0627\u0639\u0627\u062A \u0645\u0646\u0628\u0639 \u0627\u0637\u0644\u0627\u0639\u0627\u062A\u06CC \u0645\u0633\u062A\u0642\u06CC\u0645");
		lblNewLabel.setBounds(136, 11, 175, 14);
		panel_1.add(lblNewLabel);
		panel_1.setFocusTraversalPolicy(new FocusTraversalOnArray(new Component[]{lblNewLabel}));
		
		JPanel panel_2 = new JPanel();
		frame.getContentPane().add(panel_2, "name_96051832879093");
		
		JLabel lblNewLabel_1 = new JLabel("\u0627\u0637\u0644\u0627\u0639\u0627\u062A \u0645\u0646\u0628\u0639 \u0627\u0637\u0644\u0627\u0639\u0627\u062A\u06CC \u063A\u06CC\u0631 \u0645\u0633\u062A\u0642\u06CC\u0645:");
		panel_2.add(lblNewLabel_1);

		JButton button = new JButton("\u0627\u062F\u0627\u0645\u0647");
		button.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent arg0) {
				if(rdbtnNewRadioButton_1.isSelected()){
					panel.setVisible(false);
					panel_1.setVisible(true);
				}
				else if(rdbtnNewRadioButton.isSelected()){
					panel.setVisible(false);
					panel_2.setVisible(true);
				}
					
			}
		});
		button.setBounds(46, 135, 89, 23);
		panel.add(button);
	}
	public JLabel getLblNewLabel() {
		return lblNewLabel;
	}
}
