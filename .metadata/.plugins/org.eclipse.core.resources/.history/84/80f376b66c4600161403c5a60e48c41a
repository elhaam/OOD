	protected void addMore(JPanel panel,int count,int i, int j , int k, int l,String tablename,String... args ) {
		// TODO Auto-generated method stub
		 JComboBox newbox = new JComboBox();
		 newbox.setBounds(i, j+20, k, l);
         newbox.setName("combo" + count );
         count++;
         panel.add(newbox);
         fillComboBox(newbox,tablename, args);
//         panel.revalidate();  // For JDK 1.7 or above.
//         //frame.getContentPane().revalidate(); // For JDK 1.6 or below.
//         panel.repaint();

	}
